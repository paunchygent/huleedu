# Auto-generated development Dockerfile for file_service
ARG DEPS_IMAGE=huledu-deps:dev
FROM ${DEPS_IMAGE} AS base

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PDM_USE_VENV=false \
    PDM_IGNORE_ACTIVE_VENV=1 \
    PROJECT_ROOT=/app \
    PYTHONPATH=/app \
    ENV_TYPE=docker

RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    libmagic1 \
    pandoc \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /app

FROM base AS development
COPY --chown=appuser:appuser services/file_service/ /app/services/file_service/
USER appuser
WORKDIR /app
CMD ["pdm", "run", "-p", "/app", "python", "services/file_service/app.py"]
